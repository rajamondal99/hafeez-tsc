<openerp>
    <data>


		<record id="mail_templ_delivery_transfer_created" model="mail.template">
			<field name="name" >Delivery Transfer Document has been Created</field>
			<field name="email_from">${ctx.get('system_email')}</field>
			<field name="reply_to">${ctx.get('system_email')}</field>
			<field name="subject">A New Delivery Transfer Document with Source document (${ctx.get('origin')}) has been created </field>
			<field name="email_to">${ctx.get('stock_person_email')}</field>
			<field name="model_id"   model="ir.model"  search="[('model', '=', 'stock.picking')]" />
		    <field name="auto_delete" eval="True"/>
			<field name="body_html"  >
				<![CDATA[
				<p>Dear ${ctx.get('stock_person_name')},</p>
				<p>A New Delivery transfer document for the sales order (${ctx.get('origin')}) has been created. </p>
				<p><a href="${ctx.get('url')}">follow the Link to check availability of items to be removed from the inventory as you the deliver items to the customer</a></p>
				<p>Regards and Thanks</p>
				<p>This is an autogenerated message</p>
				]]>
			</field>
		</record>

		<record id="mail_templ_purchase_request_email_sales_stock" model="mail.template">
			<field name="name" >Purchase Request from Sales</field>
			<field name="email_from">${ctx.get('system_email')}</field>
			<field name="reply_to">${ctx.get('system_email')}</field>
			<field name="subject"> Purchase Request from Sales Order (${ctx.get('sale_order_name')}) </field>
			<field name="email_to">${ctx.get('purchase_request_email')}</field>
			<field name="model_id"   model="ir.model"  search="[('model', '=', 'purchase.request')]" />
		    <field name="auto_delete" eval="True"/>
			<field name="body_html"  >
				<![CDATA[
				<p>Dear ${ctx.get('partner_name')},</p>
				<p>A new purchase request document for the sales order (${ctx.get('sale_order_name')}) has been created. </p>
				<p><a href="${ctx.get('url')}">Follow the link to view the document and send to the manager for approval of items to be purchased</a></p>
				<p>Regards and Thanks</p>
				<p>This is an autogenerated message</p>
				]]>
			</field>
		</record>


		<record id="mail_templ_purchase_stock_level_email_sales_stock_alert" model="mail.template">
			<field name="name" >Sale Stock Level Alert from Sales</field>
			<field name="email_from">${ctx.get('system_email')}</field>
			<field name="reply_to">${ctx.get('system_email')}</field>
			<field name="subject"> Stock Alert Message from Sales Order (${ctx.get('sale_order_name')}) </field>
			<field name="email_to">${ctx.get('purchase_stock_email')}</field>
			<field name="model_id"   model="ir.model"  search="[('model', '=', 'sale.order')]" />
		    <field name="auto_delete" eval="True"/>
			<field name="body_html"  >
				<![CDATA[
				<p>Dear ${ctx.get('partner_name')},</p>
				<p>The Items listed, from the ${ctx.get('stock_locations')}, are below the quantities that are to be sold from the sales order with ID (${ctx.get('sale_order_name')}).  </p>
				<p> ${ctx.get('msg')}</p>
				<p>You may manually create a purchase order/purchase requests for the listed items, to replenish the stock</p>
				<p>Regards and Thanks</p>
				<p>This is an autogenerated message</p>
				]]>
			</field>
		</record>

		<record id="mail_templ_invoice_before_delivery" model="mail.template">
			<field name="name" >Invoice Created before Delivery</field>
			<field name="email_from">${ctx.get('system_email')}</field>
			<field name="reply_to">${ctx.get('system_email')}</field>
			<field name="subject">A New draft invoice with source document (${ctx.get('origin')}) has been created for the customer (${ctx.get('partner_name')})  </field>
			<field name="email_to">${ctx.get('accountant_email')}</field>
			<field name="model_id"   model="ir.model"  search="[('model', '=', 'stock.picking')]" />
		    <field name="auto_delete" eval="True"/>
			<field name="body_html"  >
				<![CDATA[
				<p>Dear ${ctx.get('accountant_name')},</p>
				<p>A New Draft Invoice with Source Document Number (${ctx.get('origin')}) has been created. Crosscheck and validate the invoice </p>
				<p><a href="${ctx.get('url')}">Follow the Link to See the New Draft Invoice</a></p>
				<p>Regards and Thanks</p>
				<p>This is an autogenerated message</p>
				]]>
			</field>
		</record>

