                <xpath expr="//form/sheet/group/group/field[@name='name']" position="attributes" >
                    <attribute name="readonly" >1</attribute>
                </xpath>
            </field>
        </record>


        <menuitem id="purchase_report" name="Purchase" parent="base.purchase_report" sequence="1"
